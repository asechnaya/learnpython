
print ('Ex 1. Part 1')

def age_func(age):
    if age < 7:
        print('you are in the kindergarden')
    elif (7 <= age <= 18):
        print('You are in a school')
    elif (18 < age <=22):
        print('You are a student')
    else:
            print('You must be working')

age = int(input ('age? '));

print ('Your age is', age)
age_func(age)

